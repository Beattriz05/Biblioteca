{
  "name": "biblioteca-api",
  "version": "1.0.0",
  "description": "API de Gerenciamento de Biblioteca",
  "main": "dist/app.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn src/app.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/app.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/data-source.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "typeorm": "^0.3.17",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.10.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/cors": "^2.8.13",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.4",
    "typescript": "^5.1.3",
    "ts-node-dev": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "jest": "^29.5.0",
    "@types/jest": "^29.5.3",
    "ts-jest": "^29.1.1"
  }
}